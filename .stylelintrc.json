{
  "extends": [
    "stylelint-config-standard",
    "stylelint-config-tailwindcss",
    "stylelint-config-recess-order"
  ],
  "plugins": ["stylelint-order"],
  "rules": {
    "value-keyword-case": ["lower", { "camelCaseSvgKeywords": true }],
    "order/order": [
      [
        "custom-properties",
        "declarations",
        "rules",
        "at-rules",
        {
          "type": "at-rule",
          "name": "supports"
        },
        {
          "type": "at-rule",
          "name": "media"
        }
      ],
      { "severity": "warning" }
    ]
  }
}
